extends layout
block content
    script.
        $(document).ready(function(){
            $(".glyphicon-minus-sign").hide();
            $(".label-default").hide();
            $(".label-success").hide();
        });
    div.container
        -course=courseOffering
        -professor=course.professor
        -ratingValues=course.cumulative_rating_values
        -ratings=course.ratings


        div.col-md-9
            div.row
                h1.col-md-10 #{course.course.course_name}
                a.col-md-2.btn.btn-success(href='rate/') RATE
            h4 Year #{course.year} Semester #{course.semester} by #{professor.first_name} #{professor.last_name}
            div.well.row
                h3 Ratings by Students
                - for ratingValue in ratingValues
                    div.row
                        div.col-md-8
                            h4 #{ratingValue.rating_param.name}
                        div.col-md-4
                            input.rating.form-control(type="number" value="#{ratingValue.value}" min=0 max=5 step=0.1 data-size="xs" disabled="true")


            div.row
                h3 Reviews
                -for rating in ratings
                    - review = rating.review
                    - user = rating.user
                    div.box-shadow.row(style="padding-left:0px; padding-top:15px;")
                        div.col-md-1
                            a(href="/user/#{user.id}/")
                                img(src="#{user.photo_url}", width="150%")
                        div.col-md-11
                            a(href="/user/#{user.id}/")
                                b #{user.first_name} #{user.last_name}
                            small
                                a(href="#").pull-right Report Spam
                            br
                            b Course:
                            |  #{review.course_comment}
                            br
                            b Professor:
                            |  #{review.prof_comment}



        div.col-md-3
            h3.pull-right Visualizations


