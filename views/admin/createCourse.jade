extends adminLayout
block content
    div
        h2 Create a new Course
        form.form-horizontal(method='post', action ='')
            div.form-group
                label.col-md-2.control-label Course No.
                div.col-md-10
                    input.form-control(type="text" name="courseNumber" placeholder="Course Number")
            div.form-group
                label.col-md-2.control-label Course Name
                div.col-md-10
                    input.form-control(type="text" name="courseName" placeholder="Course Name")
            div.form-group
                label.col-md-2.control-label Description
                div.col-md-10
                    textarea.form-control(type="textarea" rows="10" name="description" placeholder="Description")
            div.form-group
                label.col-md-2.control-label Department
                div.col-md-10
                    input.form-control(type="text" name="department" placeholder="Department")
            div.form-group
                button.btn.btn-primary.col-md-offset-10(type = 'submit') Submit

