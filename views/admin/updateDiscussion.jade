extends adminLayout
block content
    div
        h2 Update Discussion #{discussion.id}
        form.form-horizontal(method='post', action ='')
            div.form-group
                label.col-md-2.control-label Spam Count
                div.col-md-10
                    input.form-control(type="text" name="spamCount" placeholder="#{discussion.spam_flag_count}")
            div.form-group
                label.col-md-2.control-label Comment
                div.col-md-10
                    input.form-control(type="text" name="comment" placeholder="#{discussion.comment}")
            div.form-group
                label.col-md-2.control-label Hidden
                div.col-md-10
                    select.form-control(name="isDeleted")
                        option(value="0") No
                        option(value="1") Yes
            div.form-group
                label.col-md-2.control-label As Anonymous
                div.col-md-10
                    select.form-control(name="asAnon")
                        option(value="0") No
                        option(value="1") Yes
            div.form-group
                button.btn.btn-primary.col-md-offset-10(type = 'submit') Submit
