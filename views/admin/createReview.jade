extends adminLayout
block content
    div
        h2 Create a new Review
        form.form-horizontal(method='post', action ='')
            div.form-group
                label.col-md-2.control-label Rating ID
                div.col-md-10
                    input.form-control(type="text" name="ratingId" placeholder="Rating ID")
            div.form-group
                label.col-md-2.control-label Comments About the Course
                div.col-md-10
                    input.form-control(type="text" name="courseComment" placeholder="Course Comment")
            div.form-group
                label.col-md-2.control-label Comments About the Professor
                div.col-md-10
                    input.form-control(type="text" name="profComment" placeholder="Professor Comment")
            div.form-group
                button.btn.btn-primary.col-md-offset-10(type = 'submit') Submit
