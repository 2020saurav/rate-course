extends layout
block content
    div.container
        div.row
            h2.col-md-4 Courses
        div.row
            small
                p.pull-right(style="float:right;")
                    | By Department:
                    a(href="/courses/")  ALL
                    |  |
                    a(href="/courses/dept/CSE/")  CSE
                    |  |
                    a(href="/courses/dept/EE/")  EE



        -courses=courses
        -for course in courses
            div.box-shadow
                a(href='/course/#{course.id}/')
                    h3 #{course.course_name}
                p(style=" text-overflow: ellipsis; overflow:hidden; white-space: nowrap;") Contents: #{course.description}
                p Department: #{course.department}




