extends layout
block content
    div.container
        script.
            $(document).ready(function(){
                $(".glyphicon-minus-sign").hide();
                $(".label-default").hide();
                $(".label-success").hide();
                $(".label-primary").hide();
                $(".label-danger").hide();
                $(".label-warning").hide();
                $(".label-info").hide();
            });
        div.row
            h2.col-md-4 Courses
        div.row
            small
                p.pull-right(style="float:right;")
                    | By Department:
                    a(href="/courses/")  ALL
                    |  |
                    a(href="/courses/dept/AE/" title="Aerospace Engineering")  AE
                    |  |
                    a(href="/courses/dept/BSBE/")  BSBE
                    |  |
                    a(href="/courses/dept/CHE/")  CHE
                    |  |
                    a(href="/courses/dept/CE/")  CE
                    |  |
                    a(href="/courses/dept/CSE/" title="Computer Science and Engineering")  CSE
                    |  |
                    a(href="/courses/dept/EE/")  EE
                    |  |
                    a(href="/courses/dept/ME/")  ME
                    |  |
                    a(href="/courses/dept/MSE/")  MSE
                    |  |
                    a(href="/courses/dept/IME/")  IME
                    |  |
                    a(href="/courses/dept/HSS/")  HSS
                    |  |
                    a(href="/courses/dept/PHY/")  PHY
                    |  |
                    a(href="/courses/dept/MTH/")  MTH
                    |  |
                    a(href="/courses/dept/CHM/")  CHM
                    |  |
                    a(href="/courses/dept/ES/")  ES

        -for course in courses
            div.box-shadow.row
                div.row
                    div.col-md-9
                        a(href='/course/#{course.id}/')
                            h3 #{course.course_number} #{course.course_name}
                    div.col-md-3
                        input.rating.form-control(type="number" value="#{course.overall_rating}" min=0 max=5 step=0.1 data-size="xs" disabled="true")
                div
                    p(style=" text-overflow: ellipsis; overflow:hidden; white-space: nowrap;") Contents: #{course.description}
                    p Department: #{course.department}





