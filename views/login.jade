extends layout
block content
    div.container
        div.col-md-offset-4.col-md-4.well(style='margin-top:100px;')
            h2(style="text-align:center") LOGIN
            form.form-horizontal(method='post', action ='/login/')
                div.form-group
                    label.col-md-3.control-label Username
                    div.col-md-8
                        input.form-control(type="text" name="login" placeholder="Enter your username")
                div.form-group
                    label.col-md-3.control-label Password
                    div.col-md-8
                        input.form-control(type="password" name="password" placeholder="Enter your password")
                div.form-group
                    div.col-md-12
                        input.form-control(type="hidden" name="returnURL" value="#{returnURL}")
                div.form-group
                    button.btn.btn-primary.col-md-offset-8(type = 'submit') Submit
