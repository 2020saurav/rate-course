extends layout
block content
    div.container
        div.col-md-offset-2.col-md-8(style="margin-top:80px;")
            div.box-shadow(style="width:100%").row
                div.col-md-4
                    -if(user.photo_url) {
                    img(src="#{user.photo_url}" width="100%" style="max-width:200px")
                    -} else {
                    img(src="/images/anon.jpg" width="100%" style="max-width:200px")
                    -}
                div.col-md-8
                    h1 #{user.first_name} #{user.last_name}
                    h3 #{user.email}
