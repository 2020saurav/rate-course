extends layout
block content
    div.container
        div.col-md-offset-3.col-md-5(style='margin-top:100px;')
            div.box-shadow(style='width:100%')
                h2(style="text-align:center") Reset your password
                br
                form.form-horizontal(method='post', action ='/reset/')
                    div.form-group
                        label.col-md-5.control-label Username
                        div.col-md-7
                            fieldset(disabled)
                                input.form-control(type="text" name="login" value="#{login}")
                    div.form-group
                        label.col-md-5.control-label New Password
                        div.col-md-7
                            input.form-control(type="password" name="password" placeholder="Choose a new password")
                    div.form-group
                        div.col-md-7
                            input.form-control(type="hidden" name="token" value="#{token}")
                    div.form-group
                        div.col-md-7
                            input.form-control(type="hidden" name="userId" value="#{userId}")
                    div.form-group
                        button.btn.btn-success.col-md-offset-4.col-md-6(type = 'submit') SUBMIT
