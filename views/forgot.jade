extends layout
block content
    div.container
        div.col-md-offset-3.col-md-5(style='margin-top:100px;')
            div.box-shadow(style='width:100%')
                h2(style="text-align:center") Forgot Password?
                br
                form.form-horizontal(method='post', action ='/forgot/')
                    div.form-group
                        label.col-md-3.control-label Username
                        div.col-md-8
                            input.form-control(type="text" name="login" placeholder="Enter your username")
                    div.form-group
                        label.col-md-3.control-label Email
                        div.col-md-8
                            input.form-control(type="text" name="email" placeholder="Enter your email")

                    div.form-group
                        button.btn.btn-success.col-md-offset-4.col-md-6(type = 'submit') SUBMIT
                br
                | We will send you an email with a link to reset your password.
