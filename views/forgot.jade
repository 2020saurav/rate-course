extends layout
block content
    div.container
        div.col-md-offset-3.col-md-5(style='margin-top:100px;')
            div.box-shadow(style='width:100%')
                h2(style="text-align:center") Forgot Password
                form.form-horizontal(method='post', action ='/login/')
                    div.form-group
                        label.col-md-3.control-label Username
                        div.col-md-8
                            input.form-control(type="text" name="login" placeholder="Enter your username")
                    div.form-group
                        label.col-md-3.control-label Password
                        div.col-md-8
                            input.form-control(type="password" name="password" placeholder="Enter your password")
                    div.form-group
                        div.col-md-12
                            input.form-control(type="hidden" name="returnURL" value="#{returnURL}")
                    div.form-group
                        button.btn.btn-success.col-md-offset-4.col-md-6(type = 'submit') LOGIN
                br
                | Don't have an account?
                a(href="/register/")  Register
                a(href="/forgot/").pull-right Forgot Password?
