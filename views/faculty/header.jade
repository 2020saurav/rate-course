div.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    div.container
        div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/faculty/")
                | Faculty
        div.collapse.navbar-collapse
           ul.nav.navbar-nav.navbar-right
                li.dropdown.active
                    -if(typeof(session.user)=="undefined"){
                        a(href='/login/') Login
                    -} else {
                        a.dropdown-toggle(href="#" data-toggle="dropdown") #{session.firstName} #{session.lastName}
                            span &nbsp;
                            span.caret
                        ul.dropdown-menu(role="menu")
                            li
                                a(href="/faculty/logout/") Logout
                    -}


