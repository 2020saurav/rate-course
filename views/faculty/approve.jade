extends layout
block content
    div.container
        div.col-md-offset-2.col-md-8
            h2 Approve Meeting
            form.form-horizontal(method='post', action ='')
                div.form-group
                    label.col-md-2.control-label Message
                    div.col-md-10
                        textarea.form-control(type="textarea" rows="5" name="reply" placeholder="Approval Message (Optional)")
                div.form-group
                    label.col-md-2.control-label Date
                    div.col-md-4
                        input.form-control(type="text" name="date" placeholder="Date")
                    label.col-md-2.control-label Time
                    div.col-md-4
                        input.form-control(type="text" name="time" placeholder="Time")
                div.form-group
                button.btn.btn-primary.col-md-offset-10(type = 'submit') Submit
