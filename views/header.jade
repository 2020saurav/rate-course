div.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    div.container
        div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/")
                | Rate My Course
        div.collapse.navbar-collapse
            ul.nav.navbar-nav
                li
                    a(href="/courses/") Course
                li
                    a(href="/professors/") Professor
            div.col-md-6
                form.navbar-form(role='search' action='/search/' method='get')
                    div.input-group.col-md-12
                        input.form-control(type="text", placeholder="Search for Courses and Professors", name="q")
                        div.input-group-btn
                            button.btn.btn-default(type="submit")
                                i.glyphicon.glyphicon-search
            ul.nav.navbar-nav.navbar-right
                li.dropdown.active
                    -if(typeof(session.user)=="undefined")
                        a(href='/login/') Login
                    -else
                        a.dropdown-toggle(href="#" data-toggle="dropdown") #{session.firstName} #{session.lastName}
                            span &nbsp;
                            span.caret
                        ul.dropdown-menu(role="menu")
                            li
                                a(href="/user/#{session.userId}") My Profile
                            li.divider
                            li
                                a(href="/logout/") Logout


