div.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    div.container
        div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/")
                | Course Rate
        div.collapse.navbar-collapse.col-md-11
            ul.nav.navbar-nav
                li
                    a(href="/courses/") Course
                li
                    a(href="/professors/") Professor
                li
                    a(href="/contact/") Contact
                li
                    a(href="/team/") Team
        div(style="float:right;").col-md-1
             -if(typeof(session.user)=="undefined")
                 h4
                    a(href='/login/') Login
             -else
                 div.btn-group
                    button.btn.btn-block.btn-default.dropdown-toggle.nav-black(type="button" data-toggle="dropdown") #{session.firstName}
                        span &nbsp;
                        span.caret
                    ul.dropdown-menu(role="menu")
                        li
                            a(href="/user/#{session.userId}") My Profile
                        li
                            a(href="/logout/") Logout

