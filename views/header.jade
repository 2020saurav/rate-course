div.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    div.container
        div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
        div.collapse.navbar-collapse
            ul.nav.navbar-nav
                li
                    a(href="/courses/") Courses
                li
                    a(href="/professors/") Professors
                li
                    a(href="/recommended/") Recommended Courses
            ul.nav.navbar-nav.col-md-6
                form.navbar-form(role='search' action='/search/' method='get')
                    div.input-group.col-md-12
                        -var qval = '';
                        -if(typeof(query)!=="undefined") qval = query;
                        input.form-control(type="text" placeholder="Search for Courses or Professors" name="q" value="#{qval}" autocomplete="off")
                        div.input-group-btn
                            button.btn.btn-default(type="submit")
                                i.glyphicon.glyphicon-search
            ul.nav.navbar-nav.navbar-right
                li.dropdown.active
                    -if(typeof(session.user)=="undefined"){
                        a(href='/login/') Login
                    -} else {
                        a.dropdown-toggle(href="#" data-toggle="dropdown") #{session.firstName} #{session.lastName}
                            span &nbsp;
                            span.caret
                        ul.dropdown-menu(role="menu")
                            li
                                a(href="/user/#{session.user}/") My Profile
                            li.divider
                            li
                                a(href="/user/profile/update/") Update Profile
                            li.divider
                            li
                                a(href="/user/meet/requests/") Meet Requests
                            li.divider
                            li
                                a(href="/logout/") Logout
                    -}


