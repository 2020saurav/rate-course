extends layout
block content
    div.container
        div.col-md-offset-3.col-md-6.well
            h3 Feedback
            form.form-horizontal(method='post', action ='')
                div.form-group
                    div.col-md-12
                        p Your feedback is highly appreciated and will help us to improve our ability to serve you and other users of our web sites.
                    div.col-md-12
                        textarea.form-control(type="textarea" rows="10" name="feedback" placeholder="Please enter your feedback here")
                div.form-group
                    button.btn.btn-primary.col-md-offset-10(type = 'submit') Submit